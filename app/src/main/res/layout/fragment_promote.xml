<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.fragment.TableContentsFragment">

    <com.ssomai.android.scalablelayout.ScalableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_width="1080"
        app:scale_base_height="1400">

        <android.support.design.widget.TabLayout
            android:id="@+id/fragment_promote_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/khnphdbold"
            app:tabIndicatorColor="#e54b3d"
            app:scale_textsize="70"
            app:scale_left="0"
            app:scale_top="0"
            app:scale_width="1080"
            app:scale_height="120"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/fragment_promote_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:scale_left="0"
            app:scale_top="120"
            app:scale_height="1410"
            app:scale_width="1080"/>

        <Button
            android:id="@+id/fragment_promote_Add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_home_add"
            app:scale_left="920"
            app:scale_top="1200"
            app:scale_width="120"
            app:scale_height="120"/>
    </com.ssomai.android.scalablelayout.ScalableLayout>

</FrameLayout>