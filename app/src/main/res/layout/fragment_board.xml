<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.fragment.TableContentsFragment">

    <com.ssomai.android.scalablelayout.ScalableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_height="1540"
        app:scale_base_width="1080">

        <android.support.design.widget.TabLayout
            android:id="@+id/fragment_board_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="#e54b3d"
            android:fontFamily="@font/khnphdbold"
            app:scale_height="120"
            app:scale_left="0"
            app:scale_textsize="70"
            app:scale_top="0"
            app:scale_width="1080" />

       <!-- <TextView
            android:id="@+id/fragment_board_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textStyle="bold"
            app:scale_textsize = "40"
            app:scale_left="20"
            app:scale_top="140"
            app:scale_width="1040"
            app:scale_height="50"/>-->

        <ListView
            android:id="@+id/fragment_board_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:scale_height="1410"
            app:scale_left="0"
            app:scale_top="120"
            app:scale_width="1080"
            tools:listitem="@layout/list_item_bulletin"></ListView>

        <!--ListView 끝에서 다음 데이터 로딩중에 보여줄 프로그레스바-->
        <ProgressBar
            android:id="@+id/fragment_board_progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:scale_left="0"
            app:scale_top="915"
            app:scale_width="1080"
            app:scale_height="100"
            />
    </com.ssomai.android.scalablelayout.ScalableLayout>

</FrameLayout>