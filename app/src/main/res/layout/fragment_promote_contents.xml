<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/promote_view_linerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

    <com.ssomai.android.scalablelayout.ScalableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_width="1080"
        app:scale_base_height="120">

        <TextView
            android:id="@+id/promote_content_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="동아리 이름"
            android:textStyle="bold"
            app:scale_textsize = "50"
            app:scale_left="10"
            app:scale_top="10"
            app:scale_width="600"
            app:scale_height="70"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#505050"
            app:scale_left="0"
            app:scale_top="80"
            app:scale_width="500"
            app:scale_height="1"
            />

        <Button
            android:id="@+id/promote_contents_share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_share"
            app:scale_left="940"
            app:scale_top="10"
            app:scale_width="90"
            app:scale_height="90"/>

        <!--ListView
            android:id="@+id/promote_content_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:scale_left="0"
            app:scale_top="90"
            app:scale_width="1080"
            app:scale_height="1320"
            tools:listitem="@layout/list_item_promote_contents">
        </ListView-->

    </com.ssomai.android.scalablelayout.ScalableLayout>
    </LinearLayout>>
</ScrollView>