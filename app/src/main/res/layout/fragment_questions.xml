<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.fragment.TableContentsFragment">

    <com.ssomai.android.scalablelayout.ScalableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_height="1400"
        app:scale_base_width="1080">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="문의 하기"
            android:textStyle="bold"
            android:fontFamily="@font/khnphdbold"
            android:textAlignment="center"
            app:scale_textsize="50"
            app:scale_left="40"
            app:scale_top="40"
            app:scale_width="1000"
            app:scale_height="80"/>
        <EditText
            android:id="@+id/title_input_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:hint="보내는 사람(이메일을 입력해 주세요.)"
            android:inputType="text"
            android:fontFamily="@font/khnphdbold"
            app:scale_textsize="30"
            app:scale_left="40"
            app:scale_top="180"
            app:scale_width="1000"
            app:scale_height="100"/>


        <EditText
            android:id="@+id/content_input_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:padding="20dp"
            android:background="@drawable/grid_row_border"
            android:ems="10"
            android:hint="문의하실 내용을 입력해주세요."
            android:textAlignment="viewStart"
            android:inputType="textMultiLine"
            android:fontFamily="@font/khnphdbold"
            app:scale_textsize="30"
            app:scale_left="40"
            app:scale_top="300"
            app:scale_width="1000"
            app:scale_height="800"/>

        <Button
            android:id="@+id/question_upload_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#64b6ee"
            android:text="보내기"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/khnphdbold"
            app:scale_textsize = "40"
            app:scale_left="40"
            app:scale_top="1310"
            app:scale_width="1000"
            app:scale_height="80"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>

</FrameLayout>