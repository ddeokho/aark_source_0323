<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.fragment.TableContentsFragment">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:scale_base_width="1080"
        app:scale_base_height="80"
        android:background="#dededf"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_circle_arrow_right"
            app:scale_left="960"
            app:scale_top="10"
            app:scale_width="64"
            app:scale_height="64"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="규정항목"
            android:textColor="#3f3f40"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="@font/khnphdbold"
            app:scale_textsize = "40"
            app:scale_left="0"
            app:scale_top="15"
            app:scale_width="960"
            app:scale_height="80"/>
    </com.ssomai.android.scalablelayout.ScalableLayout>

</FrameLayout>